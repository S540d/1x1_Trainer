{
  "name": "1x1_trainer",
  "version": "1.2.0",
  "description": "Cross-platform 1x1 multiplication trainer with multiple game modes",
  "main": "index.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://s540d.github.io/1x1_Trainer/",
  "repository": {
    "type": "git",
    "url": "https://github.com/S540d/1x1_Trainer.git"
  },
  "bugs": {
    "url": "https://github.com/S540d/1x1_Trainer/issues"
  },
  "license": "MIT",
  "author": "S540d",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web && node scripts/post-build.js",
    "build:android": "eas build --platform android",
    "deploy": "npm run build:web && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist -t --dotfiles",
    "validate": "./scripts/validate-release.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "expo": "^54.0.33",
    "expo-localization": "^17.0.8",
    "expo-status-bar": "^3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.0.0",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "~29.7.0",
    "playwright": "^1.58.2",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  },
  "private": true
}
